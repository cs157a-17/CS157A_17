extends index

block head
  title Spartan Market | Home

block content

  <!-- latest product section -->
  <section class="top-latest-product-section">
    <div class="container">
      <div class="section-title">
        <h2>LATEST PRODUCTS</h2>
      </div>
      <div class="product-slider owl-carousel">

        - for(var i=0; i < items.length; i++) {
        <div class="product-item">
          <div class="pi-pic">
            img(src = "img/product/" + items[i].Image)
            <div class="pi-links">
              - var temp = "/addtocart/" + items[i].ItemID
              a.add-card(href=temp)
                i.flaticon-bag
                span ADD TO CART
            </div>
          </div>
          <div class="pi-text">
            <h6>$#{items[i].Price}</h6>
            <p>#{items[i].Name}</p>
          </div>
            <p>#{items[i].Description}</p>
        </div>
        - };
      </div>
    </div>
  </section>
  <!-- latest product section end -->