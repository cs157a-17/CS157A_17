extends index

block head
  title Spartan Market | #{titlename}

block content

    <!-- Product filter section -->
    <section class="product-filter-section">
        <div class="container">
            <div class="section-title">
                <h2>#{name}</h2>
            </div>
            <div class="row">

                - for(var i=0; i < items.length; i++) {
                <div class="col-lg-3 col-sm-6">
                    <div class="product-item">
                        <div class="pi-pic">
                            img(src = "img/product/" + items[i].Image)
                            <div class="pi-links">
                                a.add-card(href="/addtocart/" + items[i].ItemID)
                                    i.flaticon-bag
                                    span ADD TO CART
                            </div>
                        </div>
                        <div class="pi-text">
                            <h6>$#{items[i].Price}</h6>
                            <p>#{items[i].Name}</p>
                        </div>
                        <p>#{items[i].Description}</p>
                    </div>
                </div>
                - };
            </div>
        </div>
    </section>
    <!-- Product filter section end -->